= simple_form_for(resource, :url => session_path(resource_name), :html => {:class => 'form-horizontal' }) do |form|
  - unless devise_error_messages!.blank?
    .span8.offset2.alert.alert-error
      = devise_error_messages!
  .span4.offset3
    = form.input :email, label: false, input_html: {placeholder: "Адрес электронной почты"}
    = form.input :password, label: false, input_html: {placeholder: "Пароль"}
    = form.submit "Войти", class: "btn btn-success pull-right"
