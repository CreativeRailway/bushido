= simple_form_for(resource, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |form|
  .span8.offset2.alert.alert-error
    = devise_error_messages!
  .span4.offset3
    = form.input :username, label: false, input_html: {placeholder: "Имя пользователя"}
    = form.input :email, label: false, input_html: {placeholder: "Адрес электронной почты"}
    = form.input :password, label: false, input_html: {placeholder: "Пароль"}
    = form.button :submit, class: "btn btn-success pull-right"

